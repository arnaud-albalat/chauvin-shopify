{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  /* Ajustement pour forcer le ratio carré si demandé */
  .page-list-card .media {
     height: 100%;
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-list-wrapper page-width isolate{% if show_mobile_slider %} page-width-desktop{% endif %}{% if section.settings.title == blank %} no-heading{% endif %} section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
        <h2
          id="SectionHeading-{{ section.id }}"
          class="collection-list-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        >
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    <slider-component class="slider-mobile-gutter{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <ul
        class="collection-list contains-card contains-card--collection{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down{% if section.settings.swipe_on_mobile %} slider slider--tablet grid--peek{% endif %} collection-list--{{ section.blocks.size }}-items"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- liquid
          assign columns = section.blocks.size
          if columns > 3
            assign columns = 3
          endif
        -%}
        {%- for block in section.blocks -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="collection-list__item grid__item{% if show_mobile_slider %} slider__slide{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {%- assign page_item = block.settings.page -%}
            {%- assign image = block.settings.image -%}
            
            <div class="card-wrapper animate-arrow page-list-card">
              <div class="card
                card--{{ settings.card_style }}
                {% if image == blank %} card--text{% endif %}
                {% if settings.card_style == 'card' %} color-{{ settings.card_color_scheme }} gradient{% endif %}
                {% if settings.image_padding and settings.card_style != 'standard' %} card--padding{% endif %}"
                style="--ratio-percent: {{ 1 | divided_by: 1 | times: 100 }}%;"
              >
                <div class="card__inner {% if settings.card_style == 'standard' %} color-{{ settings.card_color_scheme }} gradient{% endif %}{% if image or settings.card_style == 'standard' %} ratio{% endif %}" style="--ratio-percent: 100%;">
                  {%- if image != blank -%}
                    <div class="media media--transparent media--hover-effect">
                      <img
                        srcset="{{ image | image_url: width: 165 }} 165w,
                          {{ image | image_url: width: 330 }} 330w,
                          {{ image | image_url: width: 535 }} 535w,
                          {{ image | image_url: width: 750 }} 750w,
                          {{ image | image_url: width: 1000 }} 1000w"
                        src="{{ image | image_url: width: 1500 }}"
                        sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: columns }}px, (min-width: 750px) {% if section.settings.columns_mobile == '1' %} 100vw {% else %} 50vw {% endif %}, calc(100vw - 30px)"
                        alt="{{ page_item.title | default: 'Page' | escape }}"
                        height="{{ image.height }}"
                        width="{{ image.width }}"
                        loading="lazy"
                        class="motion-reduce"
                      >
                    </div>
                  {%- else -%}
                    <div class="media media--transparent media--hover-effect">
                         {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {%- endif -%}
                </div>
                
                <div class="card__content">
                  <div class="card__information">
                    <h3 class="card__heading">
                      <a href="{{ page_item.url | default: '#' }}" class="full-unstyled-link">
                        {%- if page_item != blank -%}
                          {{- page_item.title | escape -}}
                        {%- else -%}
                          Nom de la page
                        {%- endif -%}
                        {%- if page_item != blank -%}
                          <span class="icon-wrap">
                            {{- 'icon-arrow.svg' | inline_asset_content -}}
                          </span>
                        {%- endif -%}
                      </a>
                    </h3>
                  </div>
                </div>
              </div>
            </div>
            
          </li>
        {%- endfor -%}
      </ul>
      {%- if show_mobile_slider -%}
        <div class="slider-buttons">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>
      {%- endif -%}
    </slider-component>
  </div>
</div>

{% schema %}
{
  "name": "Liste de pages",
  "tag": "section",
  "class": "section section-page-list",
  "max_blocks": 15,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Nos Pages",
      "label": "Titre"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Petit" },
        { "value": "h1", "label": "Moyen" },
        { "value": "h0", "label": "Grand" },
        { "value": "hxl", "label": "Très grand" }
      ],
      "default": "h1",
      "label": "Taille du titre"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Nombre de colonnes (Bureau)"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Schéma de couleurs",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Paramètres Mobiles"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        { "value": "1", "label": "1 colonne" },
        { "value": "2", "label": "2 colonnes" }
      ],
      "default": "1",
      "label": "Colonnes sur mobile"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "Activer le glissement sur mobile"
    },
    {
      "type": "header",
      "content": "Espacement"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Marge supérieure",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Marge inférieure",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Page",
      "settings": [
        {
          "type": "page",
          "id": "page",
          "label": "Sélectionner la page"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image de la carte (Carrée recommandée)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Liste de pages",
      "blocks": [
        { "type": "item" },
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}